<UserControl x:Class="ChessUI.PauseMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ChessUI">
    <!-- 暂停菜单整体增大尺寸 -->
    <Border Width="420" Height="180" Style="{StaticResource BorderStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 暂停标题 -->
            <TextBlock x:Name="PauseTitle"
                       Grid.ColumnSpan="3"
                       Text="Pause"
                       Style="{StaticResource TextStyle}"
                       FontSize="36"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <!-- 按钮：继续 -->
            <Button x:Name="ContinueButton"
                    Grid.Row="1"
                    Width="125" Height="50"
                    Style="{StaticResource ButtonStyle}"
                    Click="Continue_Click"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <TextBlock x:Name="ContinueText"
                           Text="CONTINUE"
                           FontSize="18"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Button>

            <!-- 按钮：重新开始 -->
            <Button x:Name="RestartButton"
                    Grid.Row="1" Grid.Column="1"
                    Width="125" Height="50"
                    Style="{StaticResource ButtonStyle}"
                    Click="Restart_Click"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <TextBlock x:Name="RestartText"
                           Text="RESTART"
                           FontSize="18"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Button>

            <!-- 按钮：返回菜单 -->
            <Button x:Name="MenuButton"
                    Grid.Row="1" Grid.Column="2"
                    Width="125" Height="50"
                    Style="{StaticResource ButtonStyle}"
                    Click="Menu_Click"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <TextBlock x:Name="MenuText"
                           Text="MENU"
                           FontSize="18"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Button>

        </Grid>
    </Border>
</UserControl>
