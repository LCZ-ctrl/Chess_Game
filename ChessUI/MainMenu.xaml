<Window x:Class="ChessUI.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chess"
        Width="600"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        Icon="Assets/icon.ico"
        Background="#101010"
        ResizeMode="NoResize"
        >


    <Viewbox>
        <Grid x:Name="MenuGrid" Width="600" Height="600">
            <!-- 背景 -->
            <Grid.Background>
                <ImageBrush ImageSource="Assets/Menu1.png"
                            Stretch="UniformToFill"/>
            </Grid.Background>

            <!-- 标题 -->
            <TextBlock x:Name="TitleText"
                       Text="CHESS"
                       Foreground="White"
                       FontSize="36"
                       FontWeight="Bold"
                       FontFamily="Segoe UI"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Margin="0,150,0,0"/>

            <!-- 按钮菜单 -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button x:Name="PlayButton"
                        Width="200" Height="50"
                        Content="PLAY"
                        Click="PlayButton_Click"
                        Style="{StaticResource ButtonStyle}"
                        Margin="0,50,0,10"/>

                <Button x:Name="InstructionButton"
                        Width="200" Height="50"
                        Content="INSTRUCTIONS"
                        Click="InstructionButton_Click"
                        Style="{StaticResource ButtonStyle}"
                        Margin="0,0,0,10"/>

                <Button x:Name="LanguageButton"
                        Width="200" Height="50"
                        Content="LANGUAGE"
                        Click="LanguageButton_Click"
                        Style="{StaticResource ButtonStyle}"
                        Margin="0,0,0,10"/>
                <Button x:Name="ExitButton"
                        Width="200" Height="50"
                        Content="EXIT"
                        Click="ExitButton_Click"
                        Style="{StaticResource ButtonStyle}"/>
            </StackPanel>

            <!-- 规则框（默认隐藏） -->
            <Border x:Name="InstructionBox"
                Width="400" Height="400"
                Background="#CC101010"
                BorderBrush="White"
                BorderThickness="2"
                CornerRadius="10"
                Visibility="Collapsed"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="10">

                <Grid>
                    <!-- 关闭按钮 -->
                    <Button x:Name="CloseInstructionButton"
                    Content="✕"
                    Width="30" Height="30"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Background="Transparent"
                    Foreground="White"
                    BorderBrush="Transparent"
                    FontSize="16"
                    Click="CloseInstructionButton_Click"/>

                    <!-- 规则文本 -->
                    <ScrollViewer Margin="0,40,0,0">
                        <TextBlock x:Name="InstructionText"
                       TextWrapping="Wrap"
                       Foreground="White"
                       FontSize="16"/>
                    </ScrollViewer>
                </Grid>
            </Border>


        </Grid>
    </Viewbox>
</Window>
